<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textOff="Start Recording"
        android:textOn="Stop Recording" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toggle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@mipmap/ic_launcher"/>
    <Button
        android:id="@+id/btnRecordFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Recording Folder" />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Read Me"
        android:layout_below="@+id/btnRecordFolder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/subheader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1. Click on Start/Stop button to Start/Stop recording the screen, Don't kill the app just minimize it for recording stuffs.To stop recording, open App from Minimize tray and press the stop button."
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/subheader2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2. Files are stored in folder named as 'Recordings' in Internal Storage."
        android:layout_below="@+id/subheader1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


</RelativeLayout>